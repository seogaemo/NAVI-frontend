{
    "printWidth": 80,  
    "endOfLine": "auto",
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "arrowParens": "always",
    "trailingComma": "es5",
    "plugins": [
        "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
        "^@providers/(.*)$",
        "^@components/(.*)$",
        "^@utils/(.*)$",
        "^@models/(.*)$",
        "^@constants$",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderParserPlugins": [
        "typescript",
        "jsx",
        "decorators-legacy"
    ]
}
